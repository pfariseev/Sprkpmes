<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.stylingactionbar.widget</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@color/fbutton_color_pumpkin</item>
        <item name="android:textColorSecondary">@color/fbutton_color_pumpkin</item>
        <item name="android:background">@color/fbutton_color_amethyst</item>
        <item name="android:backgroundStacked">@color/colorPrimary</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/fbutton_color_amethyst</item>
    </style>

    <style name="Theme.stylingactionbar.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/darker_gray</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

</resources>
